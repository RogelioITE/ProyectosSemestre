<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="AgendaPersonal.MainPage"
             Shell.NavBarIsVisible="False"
             Title="Inicio"
             BackgroundColor="#F4F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Título principal -->
            <Label Text="Agenda Personal"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50" />

            <!-- Botón: Lista de Contactos -->
            <Button Text="📒 Lista de Contactos"
                    Clicked="IrListaContactos"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="60" />

            <!-- Botón: Crear Contacto -->
            <Button Text="➕ Crear Nuevo Contacto"
                    Clicked="IrCrearContacto"
                    BackgroundColor="#2ECC71"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="60" />

            <!-- Botón: Configuración -->
            <Button Text="⚙️ Configuración"
                    Clicked="IrConfiguracion"
                    BackgroundColor="#95A5A6"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="60" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

